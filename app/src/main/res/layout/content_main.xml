<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:paddingLeft="-40dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RHM HM Radio Stream"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:id="@+id/toolbar_title" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--radio streaming-->
        <LinearLayout
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:paddingTop="10dp"
                android:text="@string/radio_st"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            
            <View
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/black_70"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"/>

            <!--one item-->
            <LinearLayout
                android:id="@+id/rhm_radio"
                android:clickable="true"
                android:weightSum="5"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/ic_97"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txt_rhm"
                    android:paddingLeft="15dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="RHM FM 95.7 MHz"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ic_rhm"
                        android:src="@drawable/ic_headphone_org"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />

                </LinearLayout>

            </LinearLayout>

            <!--two item-->
            <LinearLayout
                android:id="@+id/hm_radio"
                android:clickable="true"
                android:weightSum="5"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/ic_104"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/imageView2" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txt_hm"
                    android:paddingLeft="15dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="HM FM 104.5 MHz"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ic_hm"
                        android:src="@drawable/ic_headphone_org"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!--tv streaming-->
        <LinearLayout
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:paddingTop="10dp"
                android:text="@string/video_st"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/black_70"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"/>

            <!--one item-->
            <LinearLayout
                android:id="@+id/hm_tv"
                android:clickable="true"
                android:weightSum="5"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <!--icon_tv-->
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/hm"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />

                </LinearLayout>

                <!--Channel name-->
                <TextView
                    android:id="@+id/txt_hm_tv"
                    android:paddingLeft="15dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="HM TV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <!--icon-->
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ic_hm_tv"
                        android:src="@drawable/ic_tv"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />

                </LinearLayout>

            </LinearLayout>

            <!--two item-->
            <LinearLayout
                android:id="@+id/rhm_tv"
                android:clickable="true"
                android:weightSum="5"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <!--icon_tv-->
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/rhm_tv"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />

                </LinearLayout>

                <!--Channel name-->
                <TextView
                    android:id="@+id/txt_rhm_tv"
                    android:paddingLeft="15dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="RHM TV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <!--icon-->
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ic_rhm_tv"
                        android:src="@drawable/ic_tv"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:visibility="invisible"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:id="@+id/player_bar"
                android:orientation="horizontal"
                android:weightSum="5"
                android:layout_alignParentBottom="true"
                android:background="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="65dp">

                <!--icon_tv-->
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ic_playerbar"
                        android:src="@drawable/hm"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                </LinearLayout>

                <!--Channel name-->
                <TextView
                    android:id="@+id/txt_playerbar"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:paddingLeft="15dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="HM TV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <!--icon-->
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/ic_audio"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
